
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form method="post" action="/auth/login">
    <table>
        <tr>
            <td>Email</td>
            <td><input type="email" name="email" id="email" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" name="password" id="password" /> </td>
        </tr>
        <tr>
            <td></td>
            <td><button type="submit">Login</button> </td>
        </tr>
        <tr>
            <td></td>
            <td> <a href="/auth/register">Register new User</a> <a href="/auth/resetpassword">Reset Password</a>| </td>
        </tr>
    </table>
</form>

